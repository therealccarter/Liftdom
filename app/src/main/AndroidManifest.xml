<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.liftdom.liftdom">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity">
        </activity>
        <activity android:name="com.liftdom.template_editor.TemplateEditorActivity">
        </activity>
        <activity
                android:name="com.liftdom.template_editor.SaveTemplateDialog"
                android:theme="@android:style/Theme.Holo.Dialog">
        </activity>
        <activity android:name="com.liftdom.template_editor.TemplateSaved">
        </activity>
        <activity android:name="com.liftdom.template_housing.TemplateHousingActivity">
        </activity>
    </application>

</manifest>