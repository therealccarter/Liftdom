<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/backgroundgrey1"
              tools:context="com.liftdom.charts_stats_tools.tools.ExerciseMaxesFrag">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exerciseMaxes"
            android:textColor="@color/liftrGold1"
            android:textSize="24sp"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/titleView"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lessDarkGrey"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="20dp"
    />

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noMaxesFound"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:id="@+id/noMaxesFound"
            android:visibility="gone"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/recycler_view"
            android:background="@color/backgroundgrey1"
    >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>