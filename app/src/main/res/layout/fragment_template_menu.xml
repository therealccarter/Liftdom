<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.liftdom.template_housing.TemplateMenuFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingBottom="30dp"
                    android:layout_marginBottom="20dp"
            >
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardElevation="5dp"
                >
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/fromScratch"
                            android:background="@color/confirmgreen"
                            android:text="@string/newTemplateFromScratch"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                    />
                </android.support.v7.widget.CardView>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_marginEnd="40dp"
                            android:layout_marginStart="40dp"
                    />

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="5dp"
                >
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/savedTemplates"
                            android:background="@color/darkerGrey"
                            android:text="@string/saved_templates"
                            android:textColor="@color/offWhite"
                            android:textAllCaps="false"
                            android:textSize="25sp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="3dp"
                    />
                </android.support.v7.widget.CardView>



                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="10dp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                >
                    <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/userMadeTemplates"
                            android:background="@color/darkGrey"
                            android:text="@string/userMadeTemplates"
                            android:textColor="@color/offWhite"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                    />


                    <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/premadeTemplates"
                            android:background="@color/darkGrey"
                            android:text="@string/premade_templates"
                            android:textColor="@color/offWhite"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_weight="1"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                    />

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                />

                <!--
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >-->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/offWhite"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/quoteBody"
                                android:text="Test text"
                                android:textColor="@color/white"
                                android:background="@color/darkerGrey"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:padding="10dp"
                                android:gravity="center"
                                android:textSize="17sp"
                                android:layout_marginTop="15dp"
                        />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/quoteAuthor"
                                android:background="@color/darkerGrey"
                                android:textColor="@color/liftrGold1"
                                android:text="Example name"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:padding="10dp"
                                android:layout_gravity="end"
                                android:textSize="18sp"
                        />

                    </LinearLayout>

                <!-- </ScrollView> -->

            </LinearLayout>

        </ScrollView>

</LinearLayout>