<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/darkGrey"
        tools:context=".ConsentFormDialogActivity">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userConsentTitle"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_parallaxFactor="0.7"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/offWhite"
            android:gravity="center"
            android:text="@string/userConsentText"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/userConsentQuestion"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
    />

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yesRadioButton"
                android:text="@string/yes"
                android:textSize="16sp"
                android:textColor="@color/offWhite"
                android:buttonTint="@color/offWhite"
        />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noRadioButton"
                android:text="@string/no"
                android:textSize="16sp"
                android:textColor="@color/offWhite"
                android:buttonTint="@color/offWhite"
        />

    </RadioGroup>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/confirm"
            android:layout_marginTop="20dp"
            android:background="@color/confirmgreen"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/confirmButton"
            android:textSize="20sp"
            android:textColor="@color/white"
    />

</LinearLayout>