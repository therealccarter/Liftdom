<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/lessDarkGrey"
              tools:context="com.liftdom.liftdom.main_social_feed.MainFeedFrag">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noPostsHolder"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:visibility="gone"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noPostsView"
                android:gravity="center"
                android:text="@string/noPosts"
                android:textSize="24sp"
        />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clickHereToGoToWorkoutProgramming"
                android:id="@+id/goToWorkoutProgramming"
                android:textAllCaps="false"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
        />

    </LinearLayout>


    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView"
            android:layout_marginTop="110dp"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
    />

    <!--
    <com.appodeal.ads.BannerView
            android:id="@+id/appodealBannerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
    />
    -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/randomUsersBannerLL"
            android:orientation="vertical"
    >

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:background="@color/lessDarkGrey"
    >

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
