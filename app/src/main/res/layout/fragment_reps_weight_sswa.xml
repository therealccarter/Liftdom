<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/midGrey"
              android:id="@+id/holderView"
             tools:context="com.liftdom.workout_assistor.RepsWeightSSWAFrag">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
        >
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/three_dot_menu"
                    android:layout_marginTop="10dp"
                    android:id="@+id/extraOptionsButton"
                    android:layout_marginStart="25dp"
                    android:tint="@color/offerGrey"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center"
        >
            <EditText
                    android:id="@+id/reps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/reps"
                    android:inputType="number"
                    android:textColor="@color/offWhite"
                    android:textColorHint="@color/offWhite"
                    android:textSize="16sp"
                    android:imeOptions="actionNext"
                    android:maxLength="2"
            />

            <TextView
                    android:id="@+id/at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/at"
                    android:textColor="@color/offWhite"
                    android:textSize="14sp"
            />

            <EditText
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/weight"
                    android:inputType="number"
                    android:textColor="@color/offWhite"
                    android:textColorHint="@color/offWhite"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"
                    android:maxLength="3"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unit"
                    android:text="@string/pounds"
                    android:textColor="@color/offWhite"
                    android:textSize="14sp"
                    android:layout_marginEnd="5dp"
            />

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_crop_square_black_24dp2"
                    android:id="@+id/unCheckedImage"
                    android:visibility="gone"
            />

            <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/check_square"
                    android:id="@+id/checkedImage"
                    android:visibility="gone"
                    android:layout_marginStart="3dp"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="end"
        >

            <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/destroyFrag1"
                    android:src="@drawable/close_button_light_grey"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:background="@color/transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
            />

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/bottomView"
            android:background="@color/liftrGold1"
            android:visibility="gone"
    />

</LinearLayout>
