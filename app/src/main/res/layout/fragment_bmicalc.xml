<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              android:background="@color/backgroundgrey1"
              tools:context="com.liftdom.charts_stats_tools.tools.BMICalcFrag">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bmiTitle"
            android:textColor="@color/liftrGold1"
            android:textSize="24sp"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/titleView"
    />


    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lessDarkGrey"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-5dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bmiDisclaimer"
            android:textColor="@color/darkGrey"
            android:textSize="14sp"
            android:padding="5dp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="        "
            android:textColor="@color/liftrGold1"
            android:textSize="28sp"
            android:id="@+id/resultView"
            android:background="@color/black"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/summaryView"
            android:gravity="center"
            android:visibility="gone"
    />


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textColor="@color/offWhite"
                android:textSize="16sp"
        />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:id="@+id/ageEditText"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:maxLength="2"
                android:textColor="@color/grey"
                android:textSize="15sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex"
                android:textColor="@color/offWhite"
                android:textSize="16sp"
        />

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
        >
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="M"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/maleRadioButton"
                    android:textColor="@color/grey"
            />

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="F"
                    android:id="@+id/femaleRadioButton"
                    android:textColor="@color/grey"
            />

        </RadioGroup>



    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:textColor="@color/offWhite"
                    android:textSize="16sp"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heightCm"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:visibility="gone"
                    android:maxLength="3"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cm"
                    android:textColor="@color/offWhite"
                    android:textSize="14sp"
                    android:id="@+id/cmTextView"
                    android:visibility="gone"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heightFeet"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLength="1"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feet"
                    android:textColor="@color/offWhite"
                    android:textSize="14sp"
                    android:id="@+id/feetTextView"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heightInches"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLength="2"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inches"
                    android:textColor="@color/offWhite"
                    android:textSize="14sp"
                    android:id="@+id/inchesTextView"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weightColon"
                    android:textColor="@color/offWhite"
                    android:textSize="16sp"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/weightEditText"
                    android:imeOptions="actionDone"
                    android:maxLength="3"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pounds"
                    android:textColor="@color/offWhite"
                    android:textSize="14sp"
                    android:id="@+id/weightUnit"
            />

        </LinearLayout>

    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/confirmGreen"
            android:text="@string/calculate"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/calculateButton"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
    />

</LinearLayout>
