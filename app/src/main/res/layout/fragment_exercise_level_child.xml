<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ParentLinearLayout"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:focusable="true"
              android:focusableInTouchMode="true"
             tools:context="com.liftdom.template_editor.ExerciseLevelChildFrag">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinearLayoutChild1"
            android:gravity="center_horizontal"
    >

        <View
                android:background="#000000"
                android:layout_width = "280dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-10dp"
        />


        <Spinner
                android:id="@+id/movementName"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="26sp"
                android:background="@color/black"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
        />

        <View
                android:background="#000000"
                android:layout_width = "180dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
        />

    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayoutChild2"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
    >
        <Button
                android:id="@+id/addSet"
                android:layout_height="31dp"
                android:layout_width="wrap_content"
                android:text="@string/addSet"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:onClick="addSet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginEnd="2dp"
                android:background="@color/darkgrey"
                android:textColor="@color/white"
        />

        <Button
                android:id="@+id/removeSet"
                android:layout_height="31dp"
                android:layout_width="wrap_content"
                android:text="@string/removeSet"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:onClick="removeSet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/darkgrey"
                android:textColor="@color/white"
                android:layout_marginStart="2dp"
        />

    </LinearLayout>

    <View android:id="@+id/separator"
          android:background="#BDA719"
          android:layout_width = "fill_parent"
          android:layout_height="3dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="5dp"
    />

</LinearLayout>
