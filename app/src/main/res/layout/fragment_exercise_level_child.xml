<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ParentLinearLayout"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:focusable="true"
              android:focusableInTouchMode="true"
              tools:context="com.liftdom.template_editor.ExerciseLevelChildFrag"
              android:weightSum="1"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinearLayoutChild1"
            android:gravity="center_horizontal"
            android:layout_weight="0.01">

        <View
                android:background="#000000"
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/offWhite"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
        >

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/three_dot_menu"
                    android:id="@+id/extraOptionsButton"
                    android:layout_marginEnd="28dp"
            />

            <Button
                    android:id="@+id/movementName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:background="@color/liftrGold1"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:text="@string/clickToAddAnExercise"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="28dp"

            />

            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/destroyFrag"
                    android:src="@drawable/close_button"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:background="@color/transparent"
            />

        </LinearLayout>


        <View
                android:background="#000000"
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
        />

    </LinearLayout>

    <View
            android:background="#000000"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
    />

    <Button
            android:id="@+id/addSet"
            android:layout_height="31dp"
            android:layout_width="180dp"
            android:text="@string/addSet"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:onClick="addSet"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginEnd="2dp"
            android:background="@color/darkgrey"
            android:textColor="@color/white"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/superSetHolder"
            android:orientation="vertical"
    >

    </LinearLayout>


    <View android:id="@+id/separator"
          android:background="#BDA719"
          android:layout_width = "fill_parent"
          android:layout_height="3dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="5dp"
    />

</LinearLayout>
