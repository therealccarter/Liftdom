<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent"
        tools:context="com.liftdom.charts_stats_tools.tools.MaxesCreateNewDialog">

    <TextView
            android:id="@+id/exName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/liftrGold1"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/exercise"
            android:textColor="@color/black"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textSize="22sp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maxExists"
            android:id="@+id/maxExistsTextView"
            android:background="@color/lessDarkGrey"
            android:textColor="@color/darkred"
            android:gravity="center"
            android:textSize="13sp"
            android:padding="3dp"
            android:visibility="gone"
            />



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/lessDarkGrey"
            android:gravity="center"
            >

        <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:indicatorName="BallClipRotateMultipleIndicator"
                app:indicatorColor="@color/liftrGold2"
                android:id="@+id/loadingView"
                android:layout_gravity="center"
                android:visibility="visible"
                android:background="@color/lessDarkGrey"
                />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maxEditText"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:maxLength="3"
                android:foregroundTint="@color/liftrGold1"
                android:inputType="number"
                android:visibility="gone"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/units"
                android:textColor="@color/grey"
                android:visibility="gone"
                />

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/invalidExNameView"
            android:textColor="@color/darkred"
            android:background="@color/black"
            android:text="@string/invalidExName"
            android:padding="3dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/cancelButton"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/black"
                android:text="@string/cancel"
                android:textSize="17sp"
                android:textColor="@color/liftrGold1"
                />

        <Button
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/confirmButton"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/black"
                android:text="@string/confirm"
                android:textSize="17sp"
                android:textColor="@color/liftrGold1"
                android:textAllCaps="true"
                />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            />

</LinearLayout>