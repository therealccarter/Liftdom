<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/grey"
              tools:context="com.liftdom.liftdom.main_social_feed.utils.RandomUsersBannerFrag">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/closeButtonLL"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="end"
    >
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/followSomeFellowLifters"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
        />

        <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/fellowLiftersCloseButton"
                android:src="@drawable/close_button_grey"
                android:layout_marginEnd="10dp"
        />

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
    />

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/followFellowLiftersRecycler"
            android:visibility="gone"
    >

    </android.support.v7.widget.RecyclerView>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewMoreUsers"
            android:text="@string/viewMoreUsers"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
    />


</LinearLayout>
