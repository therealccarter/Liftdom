<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/lessDarkGrey"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.liftdom.template_housing.PremadeTemplatesFrag">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/darkGrey"
            >

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workoutTypeNoColon"
                    android:textSize="13sp"
                    android:id="@+id/workoutTypeRB"
                    android:textColor="@color/liftrGold2"
                    />

            <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:layout_marginStart="7dp"
                    />

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/experienceLevelNoColon"
                    android:textSize="13sp"
                    android:id="@+id/experienceLevelRB"
                    android:textColor="@color/liftrGold2"
                    />

            <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:layout_marginStart="7dp"
                    />

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alphabetical"
                    android:textSize="13sp"
                    android:id="@+id/alphabeticalRB"
                    android:textColor="@color/liftrGold2"
                    />


        </RadioGroup>

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView2"
            android:layout_marginTop="110dp"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
            />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="@color/lessDarkGrey"
            android:id="@+id/recycler_view_premade_programs"
            >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>