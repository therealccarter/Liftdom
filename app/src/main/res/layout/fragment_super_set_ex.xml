<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ParentLinearLayout"
              android:orientation="horizontal"
              android:gravity="center_horizontal"
              android:background="@color/verylightgrey"
              android:focusable="true"
              android:focusableInTouchMode="true"
              tools:context="com.liftdom.template_editor.ExerciseLevelSSFrag"
>
    <View
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/backgroundgrey1"
    />

    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_upward_gold_24dp"
            android:layout_marginStart="-27dp"
            android:background="@color/transparent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="1"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/superSetSchemeHolder"
                android:gravity="center_horizontal"
                android:layout_weight="0.01">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/grey"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
            >
                <Button
                        android:id="@+id/movementName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:background="@color/liftrGold1"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:text="@string/clickToAddAnExercise"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="18dp"
                        android:layout_marginStart="50dp"

                />

                <ImageButton
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:id="@+id/destroyFrag"
                        android:src="@drawable/close_button"
                        android:scaleType="centerCrop"
                        android:padding="5dp"
                        android:background="@color/transparent"
                />

            </LinearLayout>


            <View
                    android:background="#000000"
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
            />

        </LinearLayout>

        <View
                android:background="#000000"
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
        />

        <View android:id="@+id/separator"
              android:background="#BDA719"
              android:layout_width = "fill_parent"
              android:layout_height="1dp"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="5dp"
        />
    </LinearLayout>

</LinearLayout>




