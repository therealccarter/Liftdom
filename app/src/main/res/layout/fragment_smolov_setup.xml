<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/grey"
             tools:context="com.liftdom.workout_programs.Smolov.SmolovSetupFrag">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
            >
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/liftrGold1"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="30dp"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smolov"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/liftrGold1"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/programBasedOn"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:lineSpacingExtra="5dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/liftrGold1"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                />

                <Button
                        android:id="@+id/movementName"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@color/liftrGold1"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:text="Squat (Barbell - Back)"
                />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/oneRepMax"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                    />

                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/oneRepMaxEditText"
                            android:hint="__"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:imeOptions="actionDone"
                    />


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pounds"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                    />

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/liftrGold1"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                />

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/makeCurrentTemplate"
                        android:textColor="@color/black"
                        android:id="@+id/activeTemplateCheckbox"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                />

            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    android:gravity="center"
            >

                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:id="@+id/backButton"
                />

                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Finish"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:id="@+id/finishButton"
                />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
