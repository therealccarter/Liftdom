<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="?android:attr/dividerHorizontal"
    tools:context="com.liftdom.template_editor.UseRunningTemplateDialog">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/useRunningTemplate"
            android:textSize="25sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/liftrGold1"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resetReminder"
            android:background="@color/lessDarkGrey"
            android:gravity="center"
            android:padding="10dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:text="@string/no"
                android:id="@+id/noButton"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textAllCaps="true"
                />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:text="@string/yes"
                android:id="@+id/yesButton"
                android:textColor="@color/white"
                android:background="@color/confirmGreen"
                android:textAllCaps="true"
                />

    </LinearLayout>



</LinearLayout>

