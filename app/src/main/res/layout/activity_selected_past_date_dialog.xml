<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lessDarkGrey"
        tools:context="com.liftdom.user_profile.calendar_stuff.SelectedPastDateDialog">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/cancelButton"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/darkGrey"
                android:text="@string/x"
                android:textSize="20sp"
                android:textColor="@color/grey"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/elipses"
                android:textSize="35sp"
                android:layout_gravity="end"
                android:background="@color/liftrGold1"
                android:textColor="@color/black"
                android:paddingEnd="30dp"
                android:paddingStart="15dp"
                android:id="@+id/selectedDateView"
                />

    </LinearLayout>


    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:id="@+id/resultsLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/lessDarkGrey"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eachExerciseFragHolder"
                    android:orientation="vertical"
            >

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privateJournalTitle"
                    android:text="@string/privateJournal"
                    android:textColor="@color/grey"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:background="@color/lessDarkGrey"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privateJournalTextView"
                    android:textColor="@color/offWhite"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:background="@color/lessDarkGrey"
            />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/closeButton"
                    android:text="@string/close"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
