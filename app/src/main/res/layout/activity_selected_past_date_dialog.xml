<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context="com.liftdom.user_profile.calendar_stuff.SelectedPastDateDialog">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/elipses"
            android:textSize="35sp"
            android:layout_gravity="end"
            android:background="@color/liftrGold1"
            android:textColor="@color/black"
            android:paddingEnd="30dp"
            android:paddingStart="15dp"
            android:layout_marginStart="70dp"
            android:id="@+id/selectedDateView"
            android:layout_marginBottom="10dp"
    />

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:id="@+id/resultsLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grey"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eachExerciseFragHolder"
                    android:orientation="vertical"
            >

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privateJournalTitle"
                    android:text="@string/privateJournal"
                    android:textColor="@color/darkGrey"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:visibility="gone"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privateJournalTextView"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
            />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/closeButton"
                    android:text="@string/close"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
