<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.liftdom.workout_assistor.RestDayFrag"
              android:orientation="vertical"
              android:layout_marginTop="100dp"
>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewStretchingAndAdvice"
            android:background="@color/black"
            android:textSize="21sp"
            android:padding="10dp"
            android:id="@+id/restAdviceButton"
            android:layout_margin="10dp"
            android:textColor="@color/liftrGold1"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/healUpString"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:layout_margin="20dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/restDayComplete"
            android:background="@color/confirmgreen"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:text="@string/completeRestDay"
            android:textColor="@color/white"
            android:textSize="24sp"
    />

</LinearLayout>
