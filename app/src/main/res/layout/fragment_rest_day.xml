<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.liftdom.workout_assistor.RestDayFrag"
              android:orientation="vertical"
              android:layout_marginTop="20dp"
>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/healUpString"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:layout_margin="20dp"
            android:gravity="center"
    />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:elevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/restDayComplete"
                android:background="@color/confirmgreen"
                android:layout_gravity="bottom"
                android:text="@string/completeRestDay"
                android:textColor="@color/white"
                android:textSize="26sp"
        />
    </android.support.v7.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/liftrGold1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewStretchingAndAdvice"
            android:background="@color/black"
            android:textSize="18sp"
            android:padding="10dp"
            android:id="@+id/restAdviceButton"
            android:layout_margin="20dp"
            android:textColor="@color/liftrGold2"
    />
</LinearLayout>
