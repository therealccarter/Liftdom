<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.liftdom.workout_assistor.ExNameWAFrag"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/exNameCardView"
        android:background="@color/backgroundgrey1"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroundgrey1"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
            >
                <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="@string/clickToAddAnExercise"
                        android:background="@color/black"
                        android:textSize="22sp"
                        android:id="@+id/exerciseName"
                        android:textColor="@color/liftrGold1"
                        android:paddingEnd="10dp"
                        android:paddingStart="4dp"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
            >
                <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/destroyFrag1"
                        android:src="@drawable/close_button_mid_grey"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"
                        android:layout_marginEnd="4dp"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repsWeightContainer"
                android:orientation="vertical"
        >

        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addRepsWeightButton"
                android:text="@string/addJustSet"
                android:textColor="@color/white"
                android:minHeight="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:padding="2dp"
                android:background="@color/darkerGrey"
                android:textAllCaps="false"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp"
                android:paddingEnd="5dp"
        />

    </LinearLayout>


</android.support.v7.widget.CardView>
