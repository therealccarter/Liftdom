<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/offWhite"
        tools:context="com.liftdom.template_editor.AlgorithmOrSuperSetDialog">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseName"
            android:background="@color/liftrGold1"
            android:textColor="@color/black"
            android:text="ExName"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="10dp"
    />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addAlgorithmButton"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="@string/setAlgorithm"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:background="@color/black"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
        />

    </android.support.v7.widget.CardView>


    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:id="@+id/view"
            android:background="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addSupersetButton"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="@string/addSuperset"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:background="@color/black"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
        />

    </android.support.v7.widget.CardView>

</LinearLayout>
