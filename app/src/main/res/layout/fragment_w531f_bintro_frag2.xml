<io.github.dreierf.materialintroscreen.parallax.ParallaxLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:gravity="center"
        tools:context="com.liftdom.workout_programs.FiveThreeOne_ForBeginners.W531fBIntroFrag2">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startTodayOrNextMonday"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            />

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/todayRadioButton"
                android:text="@string/today"
                android:layout_marginEnd="20dp"
                android:textColor="@color/darkGrey"
                />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mondayRadioButton"
                android:text="@string/nextMonday"
                android:textColor="@color/darkGrey"
                />

    </RadioGroup>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_margin="20dp"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/squat1rm"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
        />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/squatEditText"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="16sp"
                android:hint="@string/elipses"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitsView1"
                android:text="@string/pounds"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bench1rm"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
        />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/benchPressEditText"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="16sp"
                android:hint="@string/elipses"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitsView2"
                android:text="@string/pounds"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadlift1rm"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
        />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deadliftEditText"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="16sp"
                android:hint="@string/elipses"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitsView3"
                android:text="@string/pounds"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ohp1rm"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
        />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ohpEditText"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="16sp"
                android:hint="@string/elipses"
                android:textColor="@color/black"
                android:imeOptions="actionDone"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitsView4"
                android:text="@string/pounds"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
        />

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trainingMaxes90Percent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
    />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roundToNearest5"
            android:textColor="@color/black"
            android:id="@+id/roundToNearest5"
            android:textSize="14sp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"
            />

</io.github.dreierf.materialintroscreen.parallax.ParallaxLinearLayout>