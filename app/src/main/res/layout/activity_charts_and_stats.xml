<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.liftdom.charts_stats_tools.ChartsStatsToolsActivity"
        android:orientation="vertical"
        android:background="@color/lessDarkGrey"
>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chartsStatsTools"
                android:textSize="24sp"
                android:textColor="@color/liftrGold1"
                android:id="@+id/title"
        />

    </android.support.v7.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/statChartHolder"
                android:orientation="vertical"
                android:paddingBottom="45dp"
        >
            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.liftdom.charts_stats_tools.tools.BMICalcFrag"
                    tools:layout="@layout/fragment_bmicalc"
                    android:layout_marginBottom="50dp"
                    android:id="@+id/bmiCalcFrag"
                    android:layout_margin="15dp"
            />

            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.liftdom.charts_stats_tools.tools.CalorieCalcFrag"
                    tools:layout="@layout/fragment_calorie_calc"
                    android:id="@+id/calCalcFrag"
                    android:layout_margin="15dp"
            />

            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.liftdom.charts_stats_tools.ex_history_chart.StatChartsFrag"
                    tools:layout="@layout/fragment_stat_charts_tab"
                    android:layout_margin="15dp"
                    android:id="@+id/statsChartsFrag"
            />

            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.liftdom.charts_stats_tools.tools.ExerciseMaxesFrag"
                    tools:layout="@layout/fragment_exercise_maxes"
                    android:layout_margin="15dp"
                    android:id="@+id/maxFrag"
            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
