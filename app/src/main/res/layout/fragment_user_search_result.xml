<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.liftdom.liftdom.main_social_feed.user_search.UserSearchResultFrag">

    <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleOverlay="false"
            app:mrl_rippleColor="@color/liftrGold1"
            app:mrl_rippleDuration="550"
            app:mrl_rippleFadeDuration="175"
            app:mrl_rippleHover="true"
            app:mrl_rippleDimension="10dp"
    >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/userInfoHolder"
    >
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:id="@+id/profilePic"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userName"
                    android:text="Username"
                    android:textColor="@color/offWhite"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:background="@color/transparent"
                    android:gravity="start"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/powerLevel"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userLevel"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/offWhite"
                />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/liftrGold2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
    />

</LinearLayout>
