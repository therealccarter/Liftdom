<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/backgroundgrey2"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            app:cardElevation="7dp"
            android:background="@color/grey"
            android:backgroundTint="@color/grey"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/grey"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="top"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userNameView"
                        android:text="DudeBro"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hasFollowedYou"
                        android:gravity="center_vertical"
                        android:textColor="@color/backgroundgrey1"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hasCommentedView"
                        android:text="@string/hasCommentedOnYourPost"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hasReppedView"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hasSentProgram"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                />


            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateTimeView"
                    android:text="3/10/18"
                    android:layout_weight="0.1"
                    android:textColor="@color/backgroundgrey1"
                    android:gravity="end"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="7dp"
                    android:textSize="12sp"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>