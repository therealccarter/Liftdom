<LinearLayout
        android:id="@+id/myChosenTemplateMainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="com.liftdom.template_housing.SelectedTemplateFrag"
        xmlns:tools="http://schemas.android.com/tools"
>

    <LinearLayout
            android:id="@+id/templateChartFragContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
    >

    </LinearLayout>

    <TextView
            android:id="@+id/selectedTemplateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo"
            android:textSize="34sp"
            android:gravity="start"
            android:background="@color/black"
            android:textColor="@color/liftrGold1"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:paddingStart="20dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chosenTemplateOptions"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/backgroundgrey1"
            android:padding="10dp"
            android:layout_margin="10dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
        >

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/editThisTemplate"
                    android:text="@string/editThisTemplate"
                    android:textColor="@color/liftrGold1"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/darkgrey"
                    android:layout_marginEnd="5dp"
            />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/deleteThisTemplate"
                    android:text="@string/deleteThisTemplate"
                    android:textColor="@color/liftrGold1"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/darkgrey"
                    android:layout_marginStart="5dp"
            />

        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setActiveTemplate"
                android:text="@string/makeCurrentTemplate"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@color/confirmgreen"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
        />



    </LinearLayout>

</LinearLayout>
