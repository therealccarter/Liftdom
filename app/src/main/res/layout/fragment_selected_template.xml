<LinearLayout
        android:id="@+id/myChosenTemplateMainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="com.liftdom.template_housing.SelectedTemplateFrag"
        xmlns:tools="http://schemas.android.com/tools"
>

    <LinearLayout
            android:id="@+id/templateChartFragContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
    >

    </LinearLayout>

    <TextView
            android:id="@+id/selectedTemplateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo"
            android:textSize="34sp"
            android:layout_gravity="end"
            android:background="@color/liftrGold1"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="80dp"
    />

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:id="@+id/myChosenTemplateSecondaryContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/editThisTemplate"
                        android:text="@string/editThisTemplate"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/black"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="start"
                />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/setActiveTemplate"
                        android:text="@string/makeCurrentTemplate"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:background="@color/confirmgreen"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="10dp"

                />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/templateListedView"
                    android:orientation="vertical"
            >


            </LinearLayout>


                <Button
                        android:layout_width="104dp"
                        android:layout_height="30dp"
                        android:id="@+id/deleteThisTemplate"
                        android:text="@string/deleteThisTemplate"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/black"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"

                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
