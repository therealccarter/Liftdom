<LinearLayout
        android:id="@+id/myChosenTemplateMainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="com.liftdom.template_housing.SelectedTemplateFrag"
        xmlns:tools="http://schemas.android.com/tools"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
    >
        <TextView
                android:id="@+id/selectedTemplateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/elipses"
                android:textSize="34sp"
                android:layout_gravity="end"
                android:background="@color/liftrGold1"
                android:textColor="@color/black"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="80dp"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45.5dp"
                android:src="@drawable/edit_pen_small"
                android:background="@color/liftrGold1"
                android:paddingEnd="10dp"
                android:id="@+id/editPenSmall"
        />

    </LinearLayout>


    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
    >

        <LinearLayout
                android:id="@+id/myChosenTemplateSecondaryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transblack2"
                android:layout_marginBottom="20dp"
        >
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/makeCurrentTemplate"
                    android:textColor="@color/liftrGold1"
                    android:id="@+id/activeTemplateCheckbox"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
            />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/editThisTemplate"
                    android:text="@string/editThisTemplate"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:background="@color/black"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:gravity="center"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/templateListedView"
                    android:orientation="vertical"
            >


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/deleteThisTemplate"
                        android:text="@string/deleteThisTemplate"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:background="@color/black"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="start"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
