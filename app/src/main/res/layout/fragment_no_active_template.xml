<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:app1="http://schemas.android.com/apk/res-auto"
              tools:context="com.liftdom.workout_assistor.NoActiveTemplateFrag"
              android:orientation="vertical"
              android:gravity="center_horizontal"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noActiveTemplate"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/goToTemplating"
                android:background="@color/black"
                android:textSize="20sp"
                android:textColor="@color/liftrGold1"
                android:padding="10dp"
                android:id="@+id/toTemplatesButton"
        />
    </androidx.cardview.widget.CardView>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:gravity="center"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app1:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/newTemplateFromScratch"
                android:background="@color/confirmGreen"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:id="@+id/newTemplateButton"
        />

    </androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:gravity="center"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/loadingHolder"
            android:visibility="gone"
            >
        <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:indicatorName="BallClipRotateMultipleIndicator"
                android:id="@+id/loadingView"
                app:indicatorColor="@color/liftrGold2"
                android:layout_gravity="center"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pleaseWaitReal"
                android:textSize="18sp"
                android:textColor="@color/backgroundgrey1"
                android:gravity="center"
                />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/workoutInsteadHolder"
            >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/workoutInsteadButton"
                android:background="@color/black"
                android:text="@string/freestyleWorkout"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="@color/liftrGold1"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:padding="5dp"
                />

    </androidx.cardview.widget.CardView>

</LinearLayout>
