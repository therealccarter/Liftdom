<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:app1="http://schemas.android.com/apk/res-auto"
              tools:context="com.liftdom.workout_assistor.NoActiveTemplateFrag"
              android:orientation="vertical"
              android:gravity="center_horizontal"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noActiveTemplate"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/goToTemplating"
                android:background="@color/black"
                android:textSize="20sp"
                android:textColor="@color/liftrGold1"
                android:padding="10dp"
                android:id="@+id/toTemplatesButton"
        />
    </androidx.cardview.widget.CardView>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:gravity="center"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app1:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/newTemplateFromScratch"
                android:background="@color/confirmgreen"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:id="@+id/newTemplateButton"
        />

    </androidx.cardview.widget.CardView>


</LinearLayout>
