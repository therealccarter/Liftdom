<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:background="@color/backgroundgrey1"
              tools:context="com.liftdom.liftdom.chat.ChatSpecific.ChatSpecificFrag">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/backgroundgrey1"
            android:layout_above="@+id/sendMessageLL"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:backgroundTint="@color/backgroundgrey1"
    >

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkGrey"
            android:id="@+id/sendMessageLL"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/darkGrey"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    >

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/newMessageView"
                        android:hint="@string/sendMessage"
                        android:textColor="@color/offWhite"
                        android:textSize="17sp"
                        android:textColorHint="@color/backgroundgrey2"
                        android:layout_marginEnd="10dp"
                        android:background="@color/darkGrey"
                        android:paddingStart="15dp"
                        android:maxLength="600"
                        android:gravity="bottom"
                        android:inputType="textCapSentences|textMultiLine"
                        android:paddingBottom="2dp"
                        android:imeOptions="normal"
                        />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginEnd="10dp"
                        />

            </LinearLayout>


            <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/sendMessageView"
                    android:src="@drawable/ic_send_black_24dp"
                    android:background="@color/transparent"
                    android:layout_gravity="center"
                    android:contentDescription="Send"
                    android:layout_marginEnd="10dp"
                    android:paddingEnd="10dp"
            />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
