<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.liftdom.template_housing.TemplateHousingActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/grey"
>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/templateMenuMainContainer"
        >

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workoutTemplating"
                    android:textSize="24sp"
                    android:id="@+id/workoutTemplatingTitle"
                    android:textColor="@color/white"
            />

        </android.support.v7.widget.Toolbar>

            <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >

                <LinearLayout
                        android:id="@+id/templateMenuFragContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                >

                </LinearLayout>

            </ScrollView>

    </LinearLayout>

    <it.sephiroth.android.library.bottomnavigation.BottomNavigation
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:bbn_entries="@menu/bottombar_menu_5items"
            app:layout_behavior="@string/bbn_default_view_behavior"
            android:id="@+id/BottomNavigation"
    >

    </it.sephiroth.android.library.bottomnavigation.BottomNavigation>

</RelativeLayout>

