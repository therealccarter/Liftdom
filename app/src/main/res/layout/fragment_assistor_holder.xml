<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/offerGrey"
              android:id="@+id/assistorHolder"
              tools:context="com.liftdom.workout_assistor.AssistorHolderFrag">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assistorWarning"
            android:textSize="15sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
    />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            app:cardElevation="3dp"
    >

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveProgressButton"
                android:background="@color/liftrGold1"
                android:textSize="18sp"
                android:text="@string/saveState"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="5dp"
                android:textAllCaps="false"
        />

    </android.support.v7.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/darkerGrey"
            android:layout_margin="10dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/oneRepMaxDayView"
            android:text="@string/oneRepMaxDay"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="gone"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exInfoHolder2"
            android:orientation="vertical"
    >

    </LinearLayout>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addExerciseButton"
                android:background="@color/black"
                android:textSize="18sp"
                android:text="@string/addExercise"
                android:textColor="@color/white"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingEnd="25dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingStart="2dp"

        />
    </android.support.v7.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/darkerGrey"
            android:layout_margin="10dp"
    />


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privateJournal"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@color/backgroundgrey1"
                    android:paddingStart="3dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
            />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privateJournal"
                    android:background="@color/white"
                    android:hint="@string/privateJournalHint"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:maxLength="600"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publicComment"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@color/backgroundgrey1"
                    android:paddingStart="3dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    android:id="@+id/textView15"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/publicComment"
                    android:background="@color/white"
                    android:hint="@string/publicCommentHint"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:maxLength="300"
            />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkerGrey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
    />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveHolder"
            android:layout_marginBottom="90dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardElevation="5dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/confirmgreen"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingEnd="5dp"
        >
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"
                    android:background="@color/confirmgreen"
                    android:text="@string/completeWorkout"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
            />

            <ImageButton
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:id="@+id/saveImage"
                    android:src="@drawable/right_chevron"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>
