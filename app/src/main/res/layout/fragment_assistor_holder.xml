<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/lessDarkGrey"
              android:id="@+id/assistorHolder"
              android:paddingBottom="120dp"
              tools:context="com.liftdom.workout_assistor.AssistorHolderFrag">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assistorWarning"
            android:textSize="15sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:visibility="gone"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="25dp"
            app:cardElevation="3dp"
            android:visibility="gone"
    >

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveProgressButton"
                android:background="@color/black"
                android:textSize="18sp"
                android:text="@string/saveState"
                android:textColor="@color/liftrGold1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="3dp"
                android:textAllCaps="false"
        />

    </androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waDisclaimer"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            />

    <View
            android:layout_width="30dp"
            android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extraText"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:visibility="gone"
            />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            app:cardElevation="3dp"
            android:id="@+id/serviceCardView"
            android:visibility="gone"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deactivateLL"
                android:orientation="horizontal"
                android:background="@color/darkGrey"
        >
            <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/close_button_light_grey"
                    android:background="@color/transparent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/deactivateStatusBarImageView"
            />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deactivateStatusBarWA"
                    android:background="@color/darkGrey"
                    android:textSize="18sp"
                    android:text="@string/deactivateStatusBarWA"
                    android:textColor="@color/white"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:padding="3dp"
            />

        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activateStatusBarWA"
                android:background="@color/confirmGreen"
                android:textSize="18sp"
                android:text="@string/activateStatusBarWA"
                android:textColor="@color/white"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="3dp"
                android:textAllCaps="false"
        />

    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/darkerGrey"
            android:layout_margin="10dp"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:id="@+id/restTimerLL"
            android:visibility="gone"
        >

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restTimerSwitch"
                android:textAlignment="textEnd"
                android:theme="@style/SwitchTheme"
                android:layout_marginStart="25dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restTimer"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical"
            android:id="@+id/restTimerInfoLL"
            android:visibility="gone"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minutes"
                    android:maxLength="1"
                    android:text="1"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/grey"
                    />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seconds"
                    android:maxLength="2"
                    android:text="30"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minutesSeconds"
                    android:textColor="@color/grey"
                    android:layout_marginStart="10dp"
                    />

            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="2.5dp"
                    android:layout_marginStart="10dp"
                    >

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/confirmRestTimerButton"
                        android:background="@color/confirmGreenDark"
                        android:textSize="16sp"
                        android:text="@string/confirmRestTimer"
                        android:textColor="@color/white"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textAllCaps="false"
                        />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restTimerInfo"
                android:textColor="@color/grey"
                />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/darkerGrey"
            android:layout_margin="10dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/oneRepMaxDayView"
            android:text="@string/oneRepMaxDay"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="gone"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endView"
            android:text="@string/lastDayOfWorkout"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="gone"
            />

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exInfoHolder2"
            android:orientation="vertical"
    >

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addExerciseButton"
                android:background="@color/black"
                android:textSize="18sp"
                android:text="@string/addExercise"
                android:textColor="@color/white"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
        />
    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/darkerGrey"
            android:layout_margin="10dp"

    />

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="2.5dp"
            android:layout_marginStart="10dp"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resetWorkoutButton"
                android:background="@color/darkGrey"
                android:textSize="16sp"
                android:text="@string/resetWorkout"
                android:textColor="@color/offWhite"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
        />
    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/darkerGrey"
            android:layout_margin="10dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publicComment"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@color/backgroundgrey1"
                    android:paddingStart="3dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    android:id="@+id/textView15"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/publicComment"
                    android:background="@color/backgroundgrey2"
                    android:hint="@string/publicCommentHint"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/offWhite"
                    android:maxLength="300"
                    android:textColorHint="@color/grey"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionDone"
            />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privateJournal"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@color/backgroundgrey1"
                    android:paddingStart="3dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
            />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privateJournal"
                    android:background="@color/backgroundgrey2"
                    android:hint="@string/privateJournalHint"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/offWhite"
                    android:maxLength="600"
                    android:textColorHint="@color/grey"
                    android:inputType="textCapSentences"

            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkerGrey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveHolder"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardElevation="5dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/confirmGreen"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingEnd="5dp"
        >
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"
                    android:background="@color/confirmGreen"
                    android:text="@string/completeWorkout"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
            />

            <ImageButton
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:id="@+id/saveImage"
                    android:src="@drawable/right_chevron_white"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/cancelRevisionHolder"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/backgroundgrey1"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingEnd="5dp"
        >
            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancelRevision"
                    android:background="@color/backgroundgrey1"
                    android:text="@string/cancelRevision"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
            />

            <ImageButton
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/close_button_white"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginEnd="5dp"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>
