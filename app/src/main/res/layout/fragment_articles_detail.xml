<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.liftdom.knowledge_center.ArticlesDetailFrag">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/liftrGold1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum Yada Yada?"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@color/black"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/liftrGold1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="10dp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/writtenBy"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/authorName"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="Test User"
                />

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/articleBody"
                    android:text="@string/longLatin"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="50dp"
                    android:lineSpacingExtra="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
            />

        </LinearLayout>

    </ScrollView>





</LinearLayout>
