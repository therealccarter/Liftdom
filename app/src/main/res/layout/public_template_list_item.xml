<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="0dp"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey"
    >
        <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@color/liftrGold1"
                app:mrl_rippleDuration="350"
                app:mrl_rippleFadeDuration="155"
                app:mrl_rippleHover="true"
                app:mrl_rippleDimension="10dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/savedTemplateHeader"
                    android:orientation="horizontal"
                    android:background="@color/black"
                    android:paddingTop="10dp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/templateName"
                        android:text="TemplateName"
                        android:textSize="26sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:layout_weight="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/timeStampView"
                        android:text="3/11/17"
                        android:layout_weight="0"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                />

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/offWhite"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/daysView"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionView"
                    android:background="@color/grey"
                    android:text="@string/elipses"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/liftrGold1"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="10dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/createdBy"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/createdByView"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Brodin"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    android:id="@+id/editedByLinearLayout"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/editedBy"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editedByView"
                        android:layout_marginBottom="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>