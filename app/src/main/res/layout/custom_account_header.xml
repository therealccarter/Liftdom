<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/header_pattern"
            android:scaleType="centerCrop"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationsLL"
                android:gravity="end"
                android:layout_marginTop="15dp"
        >
            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_add_alert_grey_18dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/notificationsTextView"
                    android:textColor="@color/liftrGold1"
                    android:textSize="16sp"
                    android:paddingEnd="15dp"
                    android:gravity="center"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/profilePicImageView"
                    android:src="@drawable/usertest"
                    android:layout_gravity="bottom"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/usernameTextView"
                        android:textColor="@color/white"
                        android:text="loading.."
                        android:textSize="20sp"
                        android:background="@color/black"
                        android:paddingEnd="10dp"
                        android:paddingStart="15dp"
                        android:paddingTop="0dp"
                        android:layout_marginBottom="2dp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/liftrGold1"
                            android:background="@color/black"
                            android:text="@string/powerLevel"
                            android:paddingStart="15dp"
                            android:paddingTop="3dp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/powerLevelTextView"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:background="@color/black"
                            android:text=""
                            android:paddingEnd="5dp"
                            android:paddingStart="3dp"

                    />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/black"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/liftrGold1"
                            android:background="@color/black"
                            android:text="@string/justCompletionStreak"
                            android:paddingStart="15dp"
                            android:paddingTop="3dp"
                            android:id="@+id/currentStreakTitleView"

                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/currentStreakTextView"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:background="@color/black"
                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>