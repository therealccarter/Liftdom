<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="7dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="0dp"
        android:background="@color/offerGrey"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical"
    >
        <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleOverlay="false"
                app:mrl_rippleColor="@color/liftrGold1"
                app:mrl_rippleDuration="450"
                app:mrl_rippleFadeDuration="155"
                app:mrl_rippleHover="true"
                app:mrl_rippleDimension="10dp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/offWhite"
                    android:id="@+id/postInfoHolder"
                    android:elevation="5dp"
            >
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/usertest"
                        android:layout_margin="15dp"
                        android:id="@+id/profilePic"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userName"
                            android:text="Username"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:background="@color/transparent"
                            android:gravity="start"
                    />

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/backgroundgrey1"
                                android:text="@string/level"
                        />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/userLevel"
                                android:textSize="16sp"
                                android:textColor="@color/backgroundgrey1"
                        />
                    </LinearLayout>



                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeStampView"
                            android:textSize="12sp"
                            android:textColor="@color/backgroundgrey1"
                            android:layout_gravity="end"
                            android:layout_marginTop="-20dp"
                            android:layout_marginEnd="15dp"
                    />

                </LinearLayout>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/liftrGold1"
                android:layout_marginBottom="15dp"
        />

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/infoRecyclerView"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
        >

        </android.support.v7.widget.RecyclerView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/publicDescription"
                android:text="@string/shorterLatin"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"

        />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/liftrGold1"
        />

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/commentsRecyclerView"
        >

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:background="@color/offWhite"
        >
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/usertest"
                    android:id="@+id/currentUserProfilePic"
            />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/commentEditText"
            />

            <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_chevron_gold"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    android:id="@+id/sendCommentButton"
            />

        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>