<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/offWhite"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="5dp"
              tools:context="com.liftdom.workout_assistor.ExNameSSWAFrag">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
        >
            <View
                    android:layout_width="10dp"
                    android:layout_height="26dp"
                    android:background="@color/darkerGrey"
            />

            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_arrow_upward_gold_24dp"
                    android:background="@color/darkerGrey"
            />

            <View
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:background="@color/darkerGrey"
            />

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_blank_fragment"
                    android:background="@color/darkerGrey"
                    android:textSize="20sp"
                    android:id="@+id/exerciseName"
                    android:textColor="@color/liftrGold1"
                    android:paddingEnd="10dp"
                    android:paddingStart="4dp"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
        >
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/destroyFrag1"
                    android:src="@drawable/close_button_mid_grey"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    android:layout_marginStart="30dp"

            />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repsWeightContainerSS"
            android:orientation="vertical"
    >

    </LinearLayout>

</LinearLayout>
