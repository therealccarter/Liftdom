<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_extra_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroundgrey1"
        tools:context="com.liftdom.template_editor.ExtraOptionsActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/bodyWeightOptionButton"
            android:visibility="gone"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:textColor="@color/liftrGold1"
                android:text="@string/bodyWeightOptionButton"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bodyWeightOptionText"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/defaultWeightOptionButton"
            android:visibility="gone"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:textColor="@color/liftrGold1"
                android:text="@string/defaultWeightOptionButton"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWeightOptionText"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/toFailureOptionButton"
            android:visibility="gone"

    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:textColor="@color/liftrGold1"
                android:text="@string/toFailureOptionButton"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toFailureOptionText"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/defaultRepsOptionButton"
            android:visibility="gone"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:textColor="@color/liftrGold1"
                android:text="@string/defaultRepsOptionButton"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultRepsOptionText"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
        />

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton1"
            android:text="@string/cancel"
            android:background="@color/darkgrey"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="end"
    />

</LinearLayout>
