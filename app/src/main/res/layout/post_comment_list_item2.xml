<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lessDarkGrey"
>

    <View android:layout_width="1dp" android:layout_height="0dp" android:background="@color/liftrGold2"
          android:id="@+id/view1" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/liftrGold2"
            android:includeFontPadding="false"
            android:id="@+id/userNameView" app:layout_constraintStart_toStartOf="@id/view1"
            android:layout_marginStart="6dp" app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:id="@+id/commentTextView"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/userNameView" app:layout_constraintStart_toStartOf="@id/view1"
            android:layout_marginStart="9dp"
            android:paddingBottom="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/close_button_mid_grey"
            android:id="@+id/deleteCommentButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.07999998"
    />

</android.support.constraint.ConstraintLayout>