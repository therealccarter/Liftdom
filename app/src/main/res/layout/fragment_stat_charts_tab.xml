<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/backgroundgrey1"
             tools:context="com.liftdom.charts_stats_tools.ex_history_chart.StatChartsFrag">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/historyChart"
                    android:textColor="@color/liftrGold1"
                    android:textSize="24sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/titleView"
            />
            
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exercises"
                        android:textSize="15sp"
                        android:id="@+id/exercisesRB"
                        android:textColor="@color/liftrGold2"
                        />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workouts"
                        android:textSize="15sp"
                        android:id="@+id/workoutsRB"
                        android:textColor="@color/liftrGold2"
                        />
                
            </RadioGroup>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pinchToZoom"
                    android:textColor="@color/darkGrey"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:visibility="visible"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lessDarkGrey"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
            />


        <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="10dp"
        >
        </com.github.mikephil.charting.charts.LineChart>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/graphingSelectorButton"
                    android:text="@string/graphing"
                    android:textColor="@color/liftrGold1"
                    android:background="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
            />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/chartWorkoutsButton"
                    android:text="@string/chartWorkouts"
                    android:textColor="@color/liftrGold1"
                    android:background="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:visibility="gone"
            >
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/reloadChartButton"
                        android:background="@color/confirmGreen"
                        android:text="@string/reloadChart"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:layout_weight="2"
                />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:id="@+id/clearChartButton"
                        android:background="@color/black"
                        android:text="@string/clearChart"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:layout_marginStart="10dp"
                />
            </LinearLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="@string/items"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:background="@color/darkGrey"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemsBeingGraphed"
                    android:background="@color/lessDarkGrey"
                    android:textColor="@color/offWhite"
                    android:textSize="17sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:visibility="gone"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mode"
                        android:textColor="@color/grey"
                        android:textSize="20sp"
                        android:visibility="gone"
                />

                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maxWeightLifted"
                            android:textSize="16sp"
                            android:textColor="@color/offWhite"
                            android:layout_marginEnd="20dp"
                            android:id="@+id/maxWeightRadioButton"
                    />

                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/totalPoundage"
                            android:textSize="16sp"
                            android:textColor="@color/offWhite"
                            android:id="@+id/overallRadioButton"
                    />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
