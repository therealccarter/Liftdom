<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
             tools:context="com.liftdom.charts_stats_tools.ex_history_chart.StatChartsFrag">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/liftrGold1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/historyChart"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="5dp"
                    android:gravity="center"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/liftrGold1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
            />


        <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="10dp"
        >
        </com.github.mikephil.charting.charts.LineChart>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/reloadChartButton"
                    android:background="@color/confirmgreen"
                    android:text="@string/reloadChart"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_margin="20dp"

            />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
        >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/graphingSelectorButton"
                    android:text="@string/graphing"
                    android:textColor="@color/liftrGold1"
                    android:background="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundgrey1"
                    android:textColor="@color/white"
                    android:text="@string/items"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"
                    android:textSize="20sp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemsBeingGraphed"
                    android:background="@color/backgroundgrey1"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textSize="17sp"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode"
                    android:textColor="@color/black"
                    android:textSize="20sp"
            />

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalPoundage"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/overallRadioButton"
                />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/maxWeightLifted"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:id="@+id/maxWeightRadioButton"
                />

            </RadioGroup>

        </LinearLayout>


            <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/clearChartButton"
                    android:background="@color/black"
                    android:text="@string/clearChart"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_margin="30dp"
            />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
