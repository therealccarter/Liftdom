<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context="com.liftdom.template_editor.AlgorithmSelectorActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:background="@color/liftrGold1"
            android:textSize="20sp"
            android:text="@string/setAlgorithm"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="15dp"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exNameAndDowView"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:background="@color/offWhite"
            android:gravity="center"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="-5dp"
    />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/every"
                        android:id="@+id/textView1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/setsWeeksEditText"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weeks"
                        android:id="@+id/textView2"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/increaseSets"
                        android:textColor="@color/black"
                        android:id="@+id/textView3"
                        android:textSize="15sp"
                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/setsIncreaseEditText"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="-10dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/every"
                        android:textColor="@color/black"
                        android:id="@+id/textView4"
                        android:textSize="15sp"
                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/repsWeeksEditText"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weeks"
                        android:textColor="@color/black"
                        android:id="@+id/textView5"
                        android:textSize="15sp"

                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/increaseReps"
                        android:textColor="@color/black"
                        android:id="@+id/textView6"
                        android:textSize="15sp"

                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/repsIncreaseEditText"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:visibility="gone"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onlyAppliesToNumerical"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="-10dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/every"
                        android:textColor="@color/black"
                        android:id="@+id/textView7"
                        android:textSize="14sp"
                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/weightsWeeksEditText"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weeks"
                        android:textColor="@color/black"
                        android:id="@+id/textView8"
                        android:textSize="14sp"

                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/increaseWeight"
                        android:textColor="@color/black"
                        android:id="@+id/textView9"
                        android:textSize="14sp"

                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/weightsIncreaseEditText"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pounds"
                        android:textColor="@color/black"
                        android:id="@+id/unitsView"
                        android:textSize="14sp"

                />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:visibility="gone"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onlyAppliesToPercents"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="-10dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/every"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/percentWeightsWeeksEditText"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weeks"
                        android:textColor="@color/black"
                        android:textSize="14sp"

                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/increasePercent"
                        android:textColor="@color/black"
                        android:textSize="14sp"

                />

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="_"
                        android:id="@+id/percentWeightsIncreaseEditText"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLength="2"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/percent"
                        android:textColor="@color/black"
                        android:textSize="15sp"

                />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="2dp"
            />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clearButton"
                    android:text="@string/clear"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="3dp"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="15dp"

            />

            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/algoLooper"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/algorithmLooper"
                    android:buttonTint="@color/liftrGold1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
            />

            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/applyAlgoToExs"
                    android:buttonTint="@color/liftrGold1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/algoExApply"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
            />

            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/applyAlgoToAllExs"
                    android:buttonTint="@color/liftrGold1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/algoAllExApply"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
            />

            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/applyAlgoWeightCheck"
                    android:buttonTint="@color/liftrGold1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/algoWeightCheck"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/cancelButton"
                        android:background="@color/black"
                        android:src="@drawable/close_button_white"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:layout_weight="1"
                />

                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/confirmButton"
                        android:background="@color/confirmgreen"
                        android:src="@drawable/ic_check_white_24dp"
                        android:scaleType="centerInside"
                        android:padding="6dp"
                        android:layout_weight="1"
                />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
