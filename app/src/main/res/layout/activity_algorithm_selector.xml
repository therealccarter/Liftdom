<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context="com.liftdom.template_editor.AlgorithmSelectorActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:background="@color/liftrGold1"
            android:textSize="20sp"
            android:text="@string/setAlgorithm"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="15dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/every"
                    android:id="@+id/textView1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="_"
                    android:id="@+id/setsWeeksEditText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weeks"
                    android:id="@+id/textView2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/increaseSets"
                    android:textColor="@color/black"
                    android:id="@+id/textView3"
                    android:textSize="16sp"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="_"
                    android:id="@+id/setsIncreaseEditText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/every"
                    android:textColor="@color/black"
                    android:id="@+id/textView4"
                    android:textSize="16sp"
            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="_"
                    android:id="@+id/repsWeeksEditText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weeks"
                    android:textColor="@color/black"
                    android:id="@+id/textView5"
                    android:textSize="16sp"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/increaseReps"
                    android:textColor="@color/black"
                    android:id="@+id/textView6"
                    android:textSize="16sp"

            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="_"
                    android:id="@+id/repsIncreaseEditText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
        >


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/every"
                    android:textColor="@color/black"
                    android:id="@+id/textView7"
                    android:textSize="14sp"

            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="_"
                    android:id="@+id/weightsWeeksEditText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weeks"
                    android:textColor="@color/black"
                    android:id="@+id/textView8"
                    android:textSize="14sp"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/increaseWeight"
                    android:textColor="@color/black"
                    android:id="@+id/textView9"
                    android:textSize="14sp"

            />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="_"
                    android:id="@+id/weightsIncreaseEditText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pounds"
                    android:textColor="@color/black"
                    android:id="@+id/textView10"
                    android:textSize="14sp"

            />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/algoLooper"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/algorithmLooper"
            android:buttonTint="@color/liftrGold1"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/confirmButton"
            android:background="@color/confirmgreen"
            android:src="@drawable/ic_check_white_24dp"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:layout_weight="1"
        />

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cancelButton"
                android:background="@color/black"
                android:src="@drawable/close_button_white"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:layout_weight="1"
        />

    </LinearLayout>

</LinearLayout>
