<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context="com.liftdom.liftdom.chat.ChatGroup.NewChatGroupDialog">
    
    <!-- We could have a name box that updates with each checked item -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startNewChat"
            android:background="@color/black"
            android:textSize="22sp"
            android:textColor="@color/liftrGold1"
            android:padding="5dp"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/liftrGold1"
            android:layout_margin="5dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
    >
        <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatNameCheckBox"
                android:layout_gravity="center"
                android:buttonTint="@color/liftrGold1"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatNameTextView"
                android:text="@string/enterChatName"
                android:textSize="17sp"
                android:textColor="@color/grey"
                android:layout_gravity="center"
        />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chatNameEditText"
                android:enabled="false"
                android:textColor="@color/black"
        />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/liftrGold1"
            android:layout_margin="10dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userListLL"
            android:orientation="vertical"
    >
        <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:indicatorName="BallClipRotateMultipleIndicator"
                android:id="@+id/loadingView"
                app:indicatorColor="@color/liftrGold2"
                android:layout_gravity="center"
        />

    </LinearLayout>

    <!--
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
    >

    </android.support.v7.widget.RecyclerView>
    -->

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/liftrGold1"
            android:layout_margin="10dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/confirmButton"
                android:background="@color/confirmgreen"
                android:src="@drawable/ic_check_white_24dp"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:layout_weight="1"
        />

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cancelButton"
                android:background="@color/black"
                android:src="@drawable/close_button_white"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:layout_weight="1"
        />
    </LinearLayout>

</LinearLayout>
