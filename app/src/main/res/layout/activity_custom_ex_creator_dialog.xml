<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        android:background="@color/backgroundgrey1"
        tools:context="com.liftdom.charts_stats_tools.exercise_selector.CustomExCreatorDialog">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/liftrGold1"
            android:text="@string/chooseCustomEx"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="28sp"
            android:padding="3dp"
    />

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
            android:visibility="gone"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customExEditText"
            android:hint="@string/elipses"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:maxLength="15"
            android:foregroundTint="@color/liftrGold1"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/cancelButton"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/black"
                android:text="@string/cancel"
                android:textSize="17sp"
                android:textColor="@color/liftrGold1"
        />

        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/confirmButton"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/black"
                android:text="@string/confirm"
                android:textSize="17sp"
                android:textColor="@color/liftrGold1"
        />

    </LinearLayout>

</LinearLayout>
