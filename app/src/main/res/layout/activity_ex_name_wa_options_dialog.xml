<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lessDarkGrey"
        tools:context="com.liftdom.workout_assistor.ExNameWAOptionDialog">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exName"
            android:background="@color/liftrGold1"
            android:textColor="@color/black"
            android:text="ExName"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="10dp"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changeWeightForAllSets"
            android:id="@+id/weightTextView"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/weightLL"
            android:background="@color/lessDarkGrey"
            android:gravity="center"
            >

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weightEditText"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:maxLength="3"
                android:foregroundTint="@color/liftrGold1"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lbs"
                android:id="@+id/units"
                android:textColor="@color/grey"
                />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black"
            android:layout_margin="20dp"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changeRepsForAllSets"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/lessDarkGrey"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repsEditText"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:maxLength="3"
                android:foregroundTint="@color/liftrGold1"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repsWord"
                android:textColor="@color/grey"
                />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaveBlank"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/cancelButton"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/black"
                android:text="@string/cancel"
                android:textSize="17sp"
                android:textColor="@color/white"
                />

        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/confirmButton"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/confirmGreen"
                android:text="@string/confirm"
                android:textSize="17sp"
                android:textColor="@color/white"
                />

    </LinearLayout>

</LinearLayout>