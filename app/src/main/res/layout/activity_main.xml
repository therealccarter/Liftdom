<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <android.support.v4.view.ViewPager
            android:id="@+id/ViewPager01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_alignParentTop="true"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="28sp"
                android:textColor="@color/liftrGold1"
                android:id="@+id/title"
        />

    </android.support.v7.widget.Toolbar>

    <!--
    <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.liftdom.liftdom.MainToAssistorFrag"
            tools:layout="@layout/fragment_main_to_assistor"
            android:id="@+id/toWorkoutAssistor"
    />
    -->

    <it.sephiroth.android.library.bottomnavigation.BottomNavigation
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:bbn_entries="@menu/bottombar_menu_5items"
            app:layout_behavior="@string/bbn_default_view_behavior"
            android:id="@+id/BottomNavigation"
    >

    </it.sephiroth.android.library.bottomnavigation.BottomNavigation>

</RelativeLayout>
