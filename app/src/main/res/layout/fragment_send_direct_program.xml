<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/offWhite"
              tools:context="com.liftdom.user_profile.single_user_profile.SendDirectProgramFrag">

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
            android:visibility="gone"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendTemplateTitleView"
            android:text="send asdfsdf to asdfss?"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="10dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="5dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sendTemplateButton"
                android:text="@string/sendProgram"
                android:background="@color/confirmgreen"
                android:minHeight="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="22sp"
        />

    </androidx.cardview.widget.CardView>




</LinearLayout>
