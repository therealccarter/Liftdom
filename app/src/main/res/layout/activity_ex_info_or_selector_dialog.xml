<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lessDarkGrey"
        android:orientation="vertical"
        tools:context="com.liftdom.workout_assistor.ExInfoOrSelectorDialog">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseName"
            android:background="@color/liftrGold1"
            android:textColor="@color/black"
            android:text="@string/noSelectedEx"
            android:textSize="22sp"
            android:gravity="center"
            android:padding="10dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="0dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectExButton"
                android:minHeight="0dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/selectOtherEx"
                android:textAllCaps="false"
                android:padding="3dp"
        />

    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="0dp"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exInfoButton"
                android:minHeight="0dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/viewExInfo"
                android:textAllCaps="false"
                android:padding="3dp"
        />

    </androidx.cardview.widget.CardView>

</LinearLayout>
