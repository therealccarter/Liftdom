<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/backgroundgrey2"
              android:layout_marginBottom="55dp"
              tools:context="com.liftdom.liftdom.main_social_feed.MainFeedFrag1">

    <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:indicatorName="BallClipRotateMultipleIndicator"
            android:id="@+id/loadingView1"
            android:layout_marginTop="200dp"
            app:indicatorColor="@color/liftrGold2"
            android:layout_gravity="center"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noResultsView"
            android:text="@string/noPosts"
            android:textColor="@color/backgroundgrey1"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="200dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/networkFailedButton"
            android:background="@color/transparent"
            android:textSize="20sp"
            android:text="@string/networkFailed"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:layout_gravity="center"
    />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/refreshView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >


        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_feed"
        >


        </android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>
