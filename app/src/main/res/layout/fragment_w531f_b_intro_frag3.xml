<io.github.dreierf.materialintroscreen.parallax.ParallaxLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:gravity="center"
        tools:context="com.liftdom.workout_programs.FiveThreeOne_ForBeginners.W531fBIntroFrag3">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/assistanceTitle"
                    android:id="@+id/assistanceTitle"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:gravity="center"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/W5314BAssistanceDescription"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/darkGrey"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pushColon"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />

                <EditText
                        android:id="@+id/setsPush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="17sp"
                        android:imeOptions="actionNext"
                        android:maxLength="2"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/x"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        />

                <EditText
                        android:id="@+id/repsPush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="17sp"
                        android:imeOptions="actionNext"
                        android:maxLength="2"
                        />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needsLessReps"
                    android:id="@+id/needsLessPush"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needsMoreReps"
                    android:id="@+id/needsMorePush"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp"
                    />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/black"
                    android:layout_marginEnd="70dp"
                    android:layout_marginStart="70dp"
                    />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pullColon"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />

                <EditText
                        android:id="@+id/setsPull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="17sp"
                        android:imeOptions="actionNext"
                        android:maxLength="2"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/x"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        />

                <EditText
                        android:id="@+id/repsPull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="17sp"
                        android:imeOptions="actionNext"
                        android:maxLength="2"
                        />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needsLessReps"
                    android:id="@+id/needsLessPull"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needsMoreReps"
                    android:id="@+id/needsMorePull"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp"
                    />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/black"
                    android:layout_marginEnd="70dp"
                    android:layout_marginStart="70dp"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SingleLegCoreColon"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />

                <EditText
                        android:id="@+id/setsLegCore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="17sp"
                        android:imeOptions="actionNext"
                        android:maxLength="2"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/x"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        />

                <EditText
                        android:id="@+id/repsLegCore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="17sp"
                        android:imeOptions="actionNext"
                        android:maxLength="2"
                        />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needsLessReps"
                    android:id="@+id/needsLessLegCore"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needsMoreReps"
                    android:id="@+id/needsMoreLegCore"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/W5314BAssistanceTitle"
                    android:textColor="@color/darkGrey"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pushColon"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/W5314BPushExercises"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/black"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pullColon"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/W5314BPullExercises"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/black"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SingleLegCoreColon"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/W5314BLegCoreExercises"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="130dp"
                    />

        </LinearLayout>

    </ScrollView>

</io.github.dreierf.materialintroscreen.parallax.ParallaxLinearLayout>
