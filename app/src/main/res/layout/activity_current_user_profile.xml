<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_workout_assistor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.liftdom.user_profile.your_profile.CurrentUserProfile"
>
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:contentScrim="?attr/colorPrimary"
                android:fitsSystemWindows="true">


            <fragment android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fragment2"
                      android:name="com.liftdom.user_profile.your_profile.ProfileHeaderFrag"
                      tools:layout="@layout/fragment_profile_info"
            />

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="snap"
            />



        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.liftdom.knowledge_center.KnowledgeCenterHolderActivity"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:id="@+id/fragHolder"
        >

            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.liftdom.user_profile.ProfileOptionsTabFrag"
                    tools:layout="@layout/fragment_profile_options_tab"
                    />

            <fragment android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:name="com.liftdom.user_profile.calendar_stuff.HistoryCalendarTab"
                      tools:layout="@layout/fragment_history_calendar_tab"
                      android:id="@+id/fragment"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/noPostsView"
                    android:gravity="center"
                    android:text="@string/noPosts"
                    android:textSize="24sp"
                    android:visibility="gone"
            />

            <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:indicatorName="BallClipRotateMultipleIndicator"
                    android:id="@+id/loadingView"
                    app:indicatorColor="@color/liftrGold2"
                    android:layout_gravity="center"
            />

            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view"
                    android:background="@color/backgroundgrey2"
                    android:layout_marginTop="10dp"
            >

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
