<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.liftdom.template_housing.NewTemplateMenuFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lessDarkGrey"
        android:paddingBottom="30dp"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:paddingTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            >

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="5dp"
                >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/premadeTemplates"
                    android:background="@color/darkGrey"
                    android:text="@string/premade_templates"
                    android:textColor="@color/offWhite"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="3dp"
                    />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="5dp"
                >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fromScratch"
                    android:background="@color/darkGrey"
                    android:text="@string/fromScratch"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
